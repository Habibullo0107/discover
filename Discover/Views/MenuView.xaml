<Window x:Class="Discover.Views.MenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discover.Views"
        mc:Ignorable="d"
        Title="MenuView" Height="600" Width="1000" WindowStartupLocation="CenterScreen" MaxHeight="600" MaxWidth="1000" MinHeight="600" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border  BorderThickness="1" BorderBrush="Black" Grid.RowSpan="4" Margin="5,5,5,5" CornerRadius="5" >
            <StackPanel Grid.Row="2" VerticalAlignment="top" >
                <Label Content="Номи Фан" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" />
                <ListBox ItemsSource="{Binding Subjects}" SelectedItem="{Binding SelectedSubject}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Nom}" Background="#FF1E88E5" Width="230" Height="35"  Margin="3,3,3,3"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
               </StackPanel>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="4" Margin="5,5,5,5" CornerRadius="3">
            <StackPanel Grid.Row="2" VerticalAlignment="top" >
                <Label Content="test1" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" />

                <ListBox ItemsSource="{Binding Mavzuho}" SelectedItem="{Binding SelectedMavzu}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Nom}" Background="#FF1E88E5" Width="230" Height="35"  Margin="3,3,3,3"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
               
                
            </StackPanel>
        </Border>


    </Grid>
</Window>
